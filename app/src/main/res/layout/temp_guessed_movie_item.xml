<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/temp_movie_image"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/place_holder_nodpi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temp_type"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TYPE"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/temp_movie_image"
        app:layout_constraintTop_toTopOf="@id/temp_movie_image" />

    <TextView
        android:id="@+id/temp_genre"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="GENRE"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/temp_type"
        app:layout_constraintTop_toTopOf="@id/temp_movie_image" />

    <TextView
        android:id="@+id/temp_director"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="DIRECT"
        android:gravity="center"

        app:layout_constraintLeft_toRightOf="@id/temp_genre"
        app:layout_constraintTop_toTopOf="@id/temp_movie_image" />

    <TextView
        android:id="@+id/temp_rank"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="RANK"
        android:gravity="center"

        app:layout_constraintLeft_toRightOf="@id/temp_director"
        app:layout_constraintTop_toTopOf="@id/temp_movie_image" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/temp_movie_image"
        />

</androidx.constraintlayout.widget.ConstraintLayout>